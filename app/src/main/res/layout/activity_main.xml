<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_superior"
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <TextView
            android:id="@+id/tv_text_typed"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginStart="190dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/white"
            android:textSize="26dp"
            tools:text="1+1" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:gravity="end"
        android:textSize="70dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_superior"
        tools:text="2" />


    <Button
        android:id="@+id/btn_C"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/light"
        android:text="C"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_negativo"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/light"
        android:text="±"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_C"
        app:layout_constraintTop_toTopOf="@+id/btn_C" />

    <Button
        android:id="@+id/btn_porcentagem"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/light"
        android:text="%"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_negativo"
        app:layout_constraintTop_toTopOf="@+id/btn_negativo" />

    <Button
        android:id="@+id/btn_dividir"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/azul"
        android:text="÷"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_porcentagem"
        app:layout_constraintTop_toTopOf="@+id/btn_porcentagem" />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/cinza_escuro"
        android:text="7"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_C" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/cinza_escuro"
        android:text="8"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_7"
        app:layout_constraintTop_toTopOf="@+id/btn_7" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/cinza_escuro"
        android:text="9"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_8"
        app:layout_constraintTop_toTopOf="@+id/btn_8"/>

    <Button
        android:id="@+id/btn_multiplicar"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/azul"
        android:text="*"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_9"
        app:layout_constraintTop_toTopOf="@+id/btn_9"/>

    <Button
        android:id="@+id/btn_4"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/cinza_escuro"
        android:text="4"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_7" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/cinza_escuro"
        android:text="5"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_4"
        app:layout_constraintTop_toBottomOf="@+id/btn_8" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/cinza_escuro"
        android:text="6"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_5"
        app:layout_constraintTop_toBottomOf="@+id/btn_9" />

    <Button
        android:id="@+id/btn_menos"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/azul"
        android:text="-"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_6"
        app:layout_constraintTop_toBottomOf="@+id/btn_multiplicar" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/cinza_escuro"
        android:text="1"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_4" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/cinza_escuro"
        android:text="2"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_1"
        app:layout_constraintTop_toBottomOf="@+id/btn_5" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/cinza_escuro"
        android:text="3"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_2"
        app:layout_constraintTop_toBottomOf="@+id/btn_6" />

    <Button
        android:id="@+id/btn_mais"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/azul"
        android:text="+"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_3"
        app:layout_constraintTop_toBottomOf="@+id/btn_menos" />

    <Button
        android:id="@+id/btn_ponto"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/cinza_escuro"
        android:text="."
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_1" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/cinza_escuro"
        android:text="0"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_ponto"
        app:layout_constraintTop_toBottomOf="@+id/btn_2" />

    <Button
        android:id="@+id/btn_apagar"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/cinza_escuro"
        android:text="←"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_0"
        app:layout_constraintTop_toBottomOf="@+id/btn_3" />

    <Button
        android:id="@+id/btn_resultado"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/azul"
        android:text="="
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_apagar"
        app:layout_constraintTop_toBottomOf="@+id/btn_mais" />

</androidx.constraintlayout.widget.ConstraintLayout>